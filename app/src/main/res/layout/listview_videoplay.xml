<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >
   <LinearLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           >

           <ImageView
               android:id="@+id/iv_videoavator"
               android:layout_width="100dp"
               android:layout_height="150dp"
               android:layout_gravity="center" />
       </LinearLayout>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginLeft="15dp"
           >
           <TextView
               android:id="@+id/video_title"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="我和我的祖国"
               android:textColor="#000000"
               android:textSize="20dp"
               android:layout_marginLeft="15dp"

               />
           <TextView
               android:id="@+id/video_publishtime"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="年份：2019年"
               android:textSize="16dp"
               android:textColor="#000000"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="15dp"
               />
           <TextView
               android:id="@+id/video_daoyan"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="吴京 刘涛"
               android:textSize="16dp"
               android:textColor="#000000"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="15dp"
               />
           <TextView
               android:id="@+id/video_zhuyan"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="吴京"
               android:textSize="16dp"
               android:textColor="#000000"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="15dp"
               />
           <TextView
               android:id="@+id/video_type"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="dedededede"
               android:textSize="17dp"
               android:textColor="#000000"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="16dp"
               />
           <TextView
               android:id="@+id/video_pingfen"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="评分：8.2"
               android:textSize="16dp"
               android:textColor="#000000"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="15dp"
               />

       </LinearLayout>
   </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#dcdcdc"
        android:layout_marginTop="6dp"
        />
</LinearLayout>
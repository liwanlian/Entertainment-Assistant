<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E6E6FA"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="#ffffff"
           >
           <ImageView
               android:id="@+id/videoplayfirst_back"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/back"
               />
       </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#000000"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:padding="10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >
                <ImageView
                    android:id="@+id/videoplayfirst_image"
                    android:layout_width="120dp"
                    android:layout_height="170dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/videoplayfirst_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我和我的祖国"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    />
                <TextView
                    android:id="@+id/videoplayfirst_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="爱国 动作"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_marginTop="3dp"
                    />
                <TextView
                    android:id="@+id/videoplayfirst_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:text="2019年"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_marginTop="3dp"
                    />
                <TextView
                    android:id="@+id/videoplayfirst_daoyan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="导演"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_marginTop="3dp"
                    />
                <TextView
                    android:id="@+id/videoplayfirst_zhuyan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主演"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_marginTop="3dp"
                    />
                <TextView
                    android:id="@+id/videoplayfirst_lantime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="语言与时长"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_marginTop="3dp"
                    />
                <TextView
                    android:id="@+id/videoplayfirst_pinfen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9.0"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_marginTop="3dp"
                    />
                <TextView
                    android:id="@+id/videoplayfirst_pubtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上映时间"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_marginTop="3dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#000000"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            >
            <TextView
                android:id="@+id/videoplayfirst_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="比例表变变变"
                android:textSize="18dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="导演"
                android:textSize="18dp"
                android:textColor="#000000"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearone"
            android:orientation="horizontal"
            android:padding="8dp"
            >

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearonez"
            android:orientation="horizontal"
            android:padding="8dp"
            >

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#000000"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主演"
                android:textSize="18dp"
                android:textColor="#000000"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lineartwo"
            android:orientation="horizontal"
            >

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lineartwoz"
            android:orientation="horizontal"
            >

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#000000"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预告片"
                android:textSize="18dp"
                android:textColor="#000000"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearthree"
            android:orientation="horizontal"
            >

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearthreez"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            >

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#000000"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剧照"
                android:textSize="18dp"
                android:textColor="#000000"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearfour"
            android:orientation="vertical"
            >

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#000000"
            />
    </LinearLayout>

</ScrollView>
